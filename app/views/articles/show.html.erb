<h3 class='bs-callout-primary'>
  <%= @article.title.html_safe %>
  <div class='article-tag label label-info'>
    <%= @article.category.name %>
  </div>
</h3>
<p><%= @article.body.html_safe %></p>

<div>
  <%= link_to gravatar_for(@article.user, size: 50), @article.user %>

  <span class='user'>
    <%= link_to @article.user.name, @article.user %>
  </span>

</div>

<span class='article-time'>
  <li>Created: <%= @article.created_at %></li>
  <li>Updated: <%= @article.updated_at %></li>
</span>

<% if current_user.admin? || current_user?(@article.user) %>

  <div class='article-buttons'>

    <% if @article.approved? %>
      <span class='glyphicon glyphicon-ok btn-sm'></span>
    <% end %>

    <% if current_user.admin? %>
      <% if @article.approved? %>
        <%= link_to '',
                  article_path(@article),
                  method: :feature,
                  data: { confirm: 'Unfeature this article?'},
                  class: 'btn btn-sm btn-danger glyphicon glyphicon-star' %>
        <% else %>
        <%= link_to '',
                    article_path(@article),
                    method: :feature,
                    data: { confirm: 'Feature this article?'},
                    class: 'btn btn-sm btn-success glyphicon glyphicon-star-empty' %>
        <% end %>
    <% end %>

    <%= link_to ' Edit',
                edit_article_path(@article),
                class: 'btn btn-sm btn-warning glyphicon glyphicon-pencil' %>

    <%= link_to ' Delete',
                 article_path(@article),
                 method: :delete,
                 data: { confirm: 'You sure?' },
                 class: 'btn btn-sm btn-danger glyphicon glyphicon-remove'%>
  </div>

<% end %>

</br>
</br>

<div class='comments'>

  <h4><%= @article.comments.count %> Comments</h4>

  <%= render @article.comments %>

  <h4>Add a comment:</h4>

  <%= render 'comments/form' %>

</div>
