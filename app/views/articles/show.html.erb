<% if @article.featured?%>
  <div class='panel panel-primary'>
<% else %>
  <div class='panel panel-default'>
<% end %>

  <div class='panel-header clear article-title'>

    <% if @article.featured?%>
      <h3 class='bs-callout-primary'>
        <%= @article.title.html_safe %>
        <div class='article-tag label label-danger'>
          <%= @article.category.name %>
        </div>
      </h3>
    <% else %>
        <h3 class='bs-callout-default'>
          <%= @article.title.html_safe %>
          <div class='article-tag label label-default'>
            <%= @article.category.name %>
          </div>
        </h3>
    <% end %>


  </div>

  <hr>

  <div class='panel-body clear'>

  <p><%= @article.body.html_safe %></p>

  <div>
    <%= link_to gravatar_for(@article.user, size: 50), @article.user %>

    <span class='user'>
    <% if @article.user.admin? %>
      <%= link_to @article.user.name,
                  @article.user,
                  class: 'admin-user' %>
    <% else %>
      <%= link_to @article.user.name,
                  @article.user %>
    <% end %>
    </span>
  </div>

  <span class='article-time'>
    <li>Created: <%= @article.created_at %></li>
    <li>Updated: <%= @article.updated_at %></li>
  </span>

  <% if logged_in? && (current_user.admin? || current_user?(@article.user)) %>

    <div class='article-buttons'>

      <% if @article.featured? %>
        <span class='glyphicon glyphicon-ok btn-sm'></span>
      <% end %>

      <% if current_user.admin? %>
        <% if @article.featured? %>
          <%= link_to '',
                      article_path(@article),
                      method: :feature,
                      data: { confirm: 'Unfeature this article?'},
                      class: 'btn btn-sm btn-primary
                              glyphicon glyphicon-star' %>
          <% else %>
          <%= link_to '',
                      article_path(@article),
                      method: :feature,
                      data: { confirm: 'Feature this article?'},
                      class: 'btn btn-sm btn-primary
                              glyphicon glyphicon-star-empty' %>
          <% end %>
      <% end %>

      <%= link_to '',
                  edit_article_path(@article),
                  class: 'btn btn-sm btn-warning
                          glyphicon glyphicon-pencil' %>

      <%= link_to '',
                  article_path(@article),
                  method: :delete,
                  data: { confirm: 'Delete this article??' },
                  class: 'btn btn-sm btn-danger
                          glyphicon glyphicon-remove'%>
    </div>

  <% end %>

  </div>

</div>

<div class='clear'>

  <h4><%= @article.comments.count %> Comments</h4>



  <div id='comment-form-fix' class='col-md-8'>
  </div>

  <div class='comment-container col-md-6'>
    <%= render @article.comments %>
  </div>

  <% if logged_in? %>

  <div id='comment-form'>
    <%= render 'comments/form' %>
  </div>

  <% end %>

</div>
