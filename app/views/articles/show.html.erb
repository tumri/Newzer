<h3 class='bs-callout-primary'>
  <%= @article.title.html_safe %>
  <div class='article-tag label label-info'>
    <%= @article.category.name %>
  </div>
</h3>
<p><%= @article.body.html_safe %></p>

<div>
  <%= link_to gravatar_for(@article.user, size: 50), @article.user %>

  <span class='user'>
    <%= link_to @article.user.name, @article.user %>
  </span>

</div>

<span class='article-time'>
  <li>Created: <%= @article.created_at %></li>
  <li>Updated: <%= @article.updated_at %></li>
</span>

<% if current_user.admin? || current_user?(@article.user) %>

  <div class='article-buttons'>

    <% if @article.approved? %>
      <span class='glyphicon glyphicon-ok btn-sm'></span>
    <% end %>

    <% if current_user.admin? %>
      <% if @article.approved? %>
        <%= link_to 'Revoke Approval',
                  @article,
                  method: :approve,
                  data: { confirm: 'Confirm revoke approval?'},
                  class: 'btn btn-sm btn-danger' %>
        <% else %>
        <%= link_to 'Approve',
                    @article,
                    method: :approve,
                    data: { confirm: 'Confirm approval?'},
                    class: 'btn btn-sm btn-success' %>
        <% end %>
    <% end %>

    <%= link_to 'Edit Article', edit_article_path(@article),
    class: 'btn btn-sm btn-warning' %>

    <%= link_to 'Delete',
                 @article,
                 method: :delete,
                 data: { confirm: 'You sure?' },
                 class: 'btn btn-sm btn-danger'%>
  </div>

<% end %>
