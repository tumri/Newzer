<%= render 'article_error_messages' %>
<%= form_for @article do |f| %>
  <div>
    <%= f.label :title %>
  </div>
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :category %>
  </div>
  <div>
    <%= f.collection_select  :category_id,
                             Category.all,
                             :id,
                             :name,
                             include_blank: false %>
  </div>
  <div>
    <%= f.label :body %>
  </div>
  <div>
    <%= f.cktext_area :body, rows: 10 %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
