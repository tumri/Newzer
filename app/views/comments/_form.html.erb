<%= bootstrap_form_for(@comment, remote: true) do |f| %>

  <%# render 'shared/error_messages', object: f.object %>
  <%# Comment error messages are currently being handled by the controller. %>

  <div class='col-md-8'>
    <%= f.text_area :body,
                    :minlength => 10,
                    :maxlength => 500,
                    rows: 3,
                    hide_label: true,
                    class: ""%>
  </div>

  <div class='col-md'>
    <%= f.button '',
                 type: 'submit',
                 title: 'Submit',
                 class: "btn btn-sm btn-success
                         glyphicon glyphicon-comment" %>
  </div>

  <%= f.hidden_field :parent_id %>

<% end %>
