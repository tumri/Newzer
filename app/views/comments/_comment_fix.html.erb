<div class='row'>
  <div class='col-md-6'>
    <div class='panel panel-default clear wrap'>

      <div class='panel-heading'>

        <p class='panel-title'>
          <strong>
            <%= link_to "#{comment.user.try(:name)}",
                        comment.user %>

            <%= link_to 'Context',
                        comment.article,
                        class: "comment-context" %>

          </strong>
        </p>
        <p class="text-muted">
          <%= comment.root? ? "Started by" : "Replied by" %> <strong><%= comment.user %> on <%= l(comment.created_at, format: '%B, %d %Y %H:%M:%S') %></p>

      </div>

      <div class='panel-body'>

        <p class='comment-body'><%= comment.body %></p>
        <p class='comment-time'>
          <span title=<%= comment.updated_at.localtime.asctime.split.join('-') %>>
            <%= distance_of_time_in_words_to_now(comment.updated_at) %> ago
          </span>
        </p>

        <% if logged_in? && current_user.admin? %>
          <div>
          <%= link_to '',
                      comment,
                      method: :delete,
                      data: { confirm: 'Delete Comment?' },
                      class: "btn btn-xs btn-danger
                              glyphicon glyphicon-remove
                              comment-delete" %>
          </div>
        <% end %>

      </div>
      <% from_reply_form ||= nil %>
      <% unless from_reply_form %>
        <p>
          <%= link_to 'Reply',
                      new_comment_path(comment.id) %>
        </p>
      <% end %>

    </div>
  </div>
</div>
