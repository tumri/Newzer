<% provide(:title, @user.name) %>
<div class='row'>
  <aside class='col-md-4'>
    <section class='user_info'>
      <h1>
        <%= gravatar_for @user %>
        <% if @user.admin? %>
          <span style='color: #d9534f';><%= @user.name %></span>
        <% else %>
          <%= @user.name %>
        <% end %>
      </h1>
    </section>
  </aside>
</div>
