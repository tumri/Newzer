<li>
  <%= gravatar_for user, size: 50 %>

  <% if user.admin? %>
    <%= link_to user.name, user, class: 'admin-user' %>
  <% else %>
    <%= link_to user.name, user %>
  <% end %>

  <% if current_user.admin? && !current_user?(user) && !user.admin? %>
    | <%= link_to 'delete', user, method: :delete,
                                  data: { confirm: 'You sure?' } %>
  <% end %>
</li>
